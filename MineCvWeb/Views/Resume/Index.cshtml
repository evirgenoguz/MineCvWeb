@model IEnumerable<Resume>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Özgeçmiş Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Resume" asp-action="Create" class="btn btn-primary p-3"><i class="bi bi-plus-circle"></i> &nbsp; CV Oluştur</a>
        </div>
    </div>
</div>

<br/><br/>

@foreach(var obj in Model){
    <div class="card text-white bg-primary mb-3" style="max-width: 100%;">
        <div class="card-header">@obj.JobTitle</div>
        <div class="card-body">
            <h4 class="card-title">@obj.Name  @obj.Surname</h4>
            <p class="card-text">@obj.MyDescription</p>
        </div>
         <a asp-area="" asp-controller="Resume" asp-action="Detail" asp-route-id="@obj.UserId" class="btn btn-success p-2">İncele</a>
    </div>
}



